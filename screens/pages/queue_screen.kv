#:import KMDList core.klist.KMDList
#:import hex kivy.utils.get_color_from_hex

<QueueItem>:
  size_hint_y: None
  height: content.height
  focus_behavior: True

  MDCardSwipeLayerBox:
    padding: 8

    PickQueueButton:
      queue_id: root.queue_id
      icon: "label-variant-outline"
      pos_hint: {"center_y": .5}

  MDCardSwipeFrontBox:

    TwoLineIconListItem:
      id: content
      text: root.queue_no
      secondary_text: root.queue_cat
      _no_ripple_effect: True

      IconLeftWidget:
        icon: "account-circle"

<QueueScreen@Screen>:
  name: 'queue_screen'

  BoxLayout:
    orientation: "vertical"

    MDLabel:

      font_size: 35
      size_hint: [1, 0.1]
      halign: 'center'
      text_size: (None, None)
      markup: True
      text: "[/color][color=#607D8B]ESMS[/color][color=#888888][size=28] Customer Queue[/size]"

    BoxLayout:
      size_hint: [0.4, 0.8]
      pos_hint: {"center_x": 0.5}

      canvas.before:
        Color:
          rgba: hex('#607D8B')
        Line:
          width: 0.5
          rectangle: self.x, self.y, self.width, self.height

      ScrollView:
        scroll_type: ['bars', 'content']

        QueueList:
          padding: 0

    BoxLayout:
      size_hint: [1, 0.05]
