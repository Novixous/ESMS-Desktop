#:import hex kivy.utils.get_color_from_hex

<QueueItem>:
  size_hint_y: None
  height: content.height
  focus_behavior: True

  MDCardSwipeLayerBox:
    padding: 8

    PickQueueButton:
      queue_id: root.queue.qid
      icon: "label-variant-outline"
      pos_hint: {"center_y": .5}

  MDCardSwipeFrontBox:

    TwoLineIconListItem:
      id: content
      text: root.queue.number
      secondary_text: root.queue.category
      _no_ripple_effect: True

      IconLeftWidget:
        icon: "account-circle"

<QueueScreen@Screen>:
  name: "queue_screen"

  BoxLayout:
    orientation: "vertical"

    BoxLayout:
      size_hint: [1, 0.1]
      padding: [20, 0, 20, 0]

      BoxLayout:
        size_hint: [None, None]
        width: checkout_btn.width

      MDLabel:

        font_size: 35
        size_hint: [1, 1]
        halign: "center"
        text_size: (None, None)
        markup: True
        text: "[color=#607D8B]ESMS[/color][color=#888888][size=28] Customer Waiting List[/size][/color]"

      MDRectangleFlatIconButton:
        id: checkout_btn
        size_hint: [None, None]
        pos_hint: {"center_y": 0.5}
        icon: "logout-variant"
        text: "CHECK OUT"
        on_release:
          app.open_shift_summary()

    BoxLayout:
      size_hint: [0.4, 0.8]
      pos_hint: {"center_x": 0.5}

      canvas.before:
        Color:
          rgba: hex("#607D8B")
        Line:
          width: 0.5
          rectangle: self.x, self.y, self.width, self.height

      ScrollView:
        scroll_type: ["bars", "content"]

        QueueList:
          padding: 0

    BoxLayout:
      size_hint: [1, 0.05]
