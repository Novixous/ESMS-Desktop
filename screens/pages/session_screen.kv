<SessionScreen@Screen>:
  name: 'session_screen'

  BoxLayout:
    orientation: "vertical"

    BoxLayout:
      size_hint: [None, 0.1]
      width: root.width - 10

      MDLabel:
        size_hint: [0.9, 1]
        font_size: 35
        pos_hint: {"center_x": 0.5}
        text_size: (None, None)
        markup: True
        text: "[/color][color=#607D8B]ESMS[/color][color=#888888][size=28] Workspace[/size]"

      BoxLayout:
        size_hint: [0.1, 0.3]
        pos_hint: {"center_y": 0.5}

        CompleteSessionButton:
          text: "COMPLETE SESSION"

    BoxLayout:
      spacing: 5
      size_hint: [None, 0.9]
      width: root.width - 10
      pos_hint: {"center_x": 0.5}

      BoxLayout:
        spacing: 5
        orientation: "vertical"
        size_hint: [0.2, 1]

        BoxLayout:
          size_hint: [1, 0.3]

          canvas.before:
            Color:
              rgba: hex('#607D8B')
            Line:
              width: 0.5
              rectangle: self.x, self.y, self.width, self.height

          BoxLayout:
            size_hint: [0.05, 1]

          BoxLayout:
            orientation: "vertical"
            size_hint: [0.9, 0.9]
            pos_hint: {"center_y": 0.5}

            canvas.before:
              Color:
                rgba: hex(app.emotion_color)
              Line:
                width: 1.5
                rectangle: self.x - 1, self.y - 3, self.width + 2, self.height + 6

            # BoxLayout:
            #   size_hint: [1, None]
            #   height: "2dp"

            CameraImage:
              pos_hint: {"center_x": 0.5, "center_y": 0.5}
              source: 'assets/video.jpg'
              nocache: True

            # BoxLayout:
            #   size_hint: [1, None]
            #   height: "2dp"

          BoxLayout:
            size_hint: [0.05, 1]

        BoxLayout:
          size_hint: [1, 0.7]

          canvas.before:
            Color:
              rgba: hex('#607D8B')
            Line:
              width: 0.5
              rectangle: self.x, self.y, self.width, self.height

      BoxLayout:
        size_hint: [0.8, 1]

        canvas.before:
          Color:
            rgba: hex('#607D8B')
          Line:
            width: 0.5
            rectangle: self.x, self.y, self.width, self.height

    BoxLayout:
      size_hint: [1, 0.01]
