<LoginScreen@Screen>:
  name: "login_screen"

  BoxLayout:
    orientation: "vertical"

    MDLabel:
      size_hint: [1, 0.2]
      font_size: 35
      text_size: (None, None)
      halign: "center"
      markup: True
      text: "[color=#888888][size=28]Login to [/size][/color][color=#607D8B]ESMS[/color]"

    BoxLayout:
      orientation: "vertical"
      size_hint: [1, 0.15]

      BoxLayout:
        size_hint: [None, 1]
        pos_hint: {"center_x": 0.5}
        width: 300

        MDTextField:
          size_hint: [1, None]
          id: emp_code
          height: 30
          center_x: root.center_x
          hint_text: "Employee Code"
          required: True
          write_tab: False

    BoxLayout:
      orientation: "vertical"
      size_hint: [1, 0.15]

      BoxLayout:
        size_hint: [None, 1]
        pos_hint: {"center_x": 0.5}
        width: 300

        MDTextField:
          size_hint: [1, None]
          id: emp_pass
          height: 30
          center_x: root.center_x
          hint_text: "Password"
          password: True
          required: True
          write_tab: False

    BoxLayout:
      orientation: "vertical"
      size_hint: [1, 0.2]

      BoxLayout:
        size_hint: [None, 1]
        pos_hint: {"center_x": 0.5}
        width: 300

        LoginButton:
          emp_code_inp: emp_code
          emp_pass_inp: emp_pass
          size_hint: [1, None]
          height: 30
          text: "LOGIN"
          center_x: root.center_x

    BoxLayout:
      size_hint: [1, 0.3]
