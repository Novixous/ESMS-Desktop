#:import KScreenManager core.kscreenmanager.KScreenManager

#:include screens/pages/login_screen.kv
#:include screens/pages/queue_screen.kv
#:include screens/pages/session_screen.kv

<MainScreenManager@KScreenManager>:

  LoginScreen:
    canvas.before:
      Color:
        rgba: 1, 1, 1, 1
      Rectangle:
        pos: self.pos
        size: self.size

  QueueScreen:
    canvas.before:
      Color:
        rgba: 1, 1, 1, 1
      Rectangle:
        pos: self.pos
        size: self.size

  SessionScreen:
    canvas.before:
      Color:
        rgba: 1, 1, 1, 1
      Rectangle:
        pos: self.pos
        size: self.size
